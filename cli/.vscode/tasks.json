   "version": "2.0.0",
   "windows": {
      "options": {
         "shell": {
            "executable": "powershell.exe"
         }
      },
   },
   "tasks": [
      {
         "label": "CLI: watch",
         "type": "typescript",
         "tsconfig": "tsconfig.json",
         "option": "watch",
         "problemMatcher": [
            "$tsc-watch"
         ],
         "group": "build"
      }
   ]
}
