{
   "$schema": "./node_modules/@angular-devkit/core/src/workspace/workspace-schema.json",
   "version": 1,
   "newProjectRoot": "projects",
   "projects": {
      "m3-odin-samples": {
         "root": "",
         "projectType": "application",
         "prefix": "odin",
         "architect": {
            "build": {
               "builder": "@angular-devkit/build-angular:browser",
               "options": {
                  "aot": true,
                  "outputPath": "dist/m3-odin",
                  "index": "src/index.html",
                  "main": "src/main.ts",
                  "polyfills": "src/polyfills.ts",
                  "tsConfig": "src/tsconfig.app.json",
                  "assets": [
                     {
                        "glob": "**/*.+(component|service).+(ts|html|css)",
                        "input": "src/app",
                        "output": "/assets/source"
                     },
                     {
                        "glob": "**/*",
                        "input": "src/assets",
                        "output": "/assets"
                     }
                  ],
                  "styles": [
                     "src/styles.css",
                     "node_modules/highlight.js/styles/googlecode.css"
                  ],
                  "scripts": [
                     "node_modules/jquery/dist/jquery.js",
                     "node_modules/d3/build/d3.js",
                     "node_modules/ids-enterprise/dist/js/sohoxi.js",
                     "node_modules/ids-enterprise/dist/js/cultures/en-US.js"
                  ]
               },
               "configurations": {
                  "production": {
                     "budgets": [
                        {
                           "type": "anyComponentStyle",
                           "maximumWarning": "6kb"
                        }
                     ],
                     "fileReplacements": [
                        {
                           "replace": "src/environments/environment.ts",
                           "with": "src/environments/environment.prod.ts"
                        }
                     ],
                     "optimization": true,
                     "outputHashing": "all",
                     "sourceMap": false,
                     "extractCss": true,
                     "namedChunks": false,
                     "aot": true,
                     "extractLicenses": true,
                     "vendorChunk": false,
                     "buildOptimizer": true
                  }
               }
            },
            "serve": {
               "builder": "@angular-devkit/build-angular:dev-server",
               "options": {
                  "browserTarget": "m3-odin-samples:build",
                  "port": 8080
               },
               "configurations": {
                  "production": {
                     "browserTarget": "m3-odin-samples:build:production"
                  }
               }
            },
            "extract-i18n": {
               "builder": "@angular-devkit/build-angular:extract-i18n",
               "options": {
                  "browserTarget": "m3-odin-samples:build"
               }
            },
            "test": {
               "builder": "@angular-devkit/build-angular:karma",
               "options": {
                  "main": "src/test.ts",
                  "polyfills": "src/polyfills.ts",
                  "tsConfig": "src/tsconfig.spec.json",
                  "karmaConfig": "src/karma.conf.js",
                  "styles": [
                     {
                        "input": "styles.css"
                     }
                  ],
                  "scripts": [],
                  "assets": [
                     {
                        "glob": "favicon.ico",
                        "input": "src/",
                        "output": "/"
                     },
                     {
                        "glob": "**/*",
                        "input": "src/assets",
                        "output": "/assets"
                     }
                  ]
               }
            },
            "lint": {
               "builder": "@angular-devkit/build-angular:tslint",
               "options": {
                  "tsConfig": [
                     "src/tsconfig.app.json",
                     "src/tsconfig.spec.json"
                  ],
                  "exclude": [
                     "**/node_modules/**"
                  ]
               }
            }
         }
      },
      "m3-odin-e2e": {
         "root": "e2e/",
         "projectType": "application",
         "architect": {
            "e2e": {
               "builder": "@angular-devkit/build-angular:protractor",
               "options": {
                  "protractorConfig": "e2e/protractor.conf.js",
                  "devServerTarget": "m3-odin-samples:serve"
               }
            },
            "lint": {
               "builder": "@angular-devkit/build-angular:tslint",
               "options": {
                  "tsConfig": "e2e/tsconfig.e2e.json",
                  "exclude": [
                     "**/node_modules/**"
                  ]
               }
            }
         }
      },
      "m3-odin-angular": {
         "root": "projects/m3-odin-angular",
         "sourceRoot": "projects/m3-odin-angular/src",
         "projectType": "library",
         "prefix": "lib",
         "architect": {
            "build": {
               "builder": "@angular-devkit/build-ng-packagr:build",
               "options": {
                  "tsConfig": "projects/m3-odin-angular/tsconfig.lib.json",
                  "project": "projects/m3-odin-angular/ng-package.json"
               },
               "configurations": {
                  "production": {
                     "project": "projects/m3-odin-angular/ng-package.prod.json",
                     "tsConfig": "projects/m3-odin-angular/tsconfig.lib.prod.json"
                  }
               }
            },
            "test": {
               "builder": "@angular-devkit/build-angular:karma",
               "options": {
                  "main": "projects/m3-odin-angular/src/test.ts",
                  "tsConfig": "projects/m3-odin-angular/tsconfig.spec.json",
                  "karmaConfig": "projects/m3-odin-angular/karma.conf.js"
               }
            },
            "lint": {
               "builder": "@angular-devkit/build-angular:tslint",
               "options": {
                  "tsConfig": [
                     "projects/m3-odin-angular/tsconfig.lib.json",
                     "projects/m3-odin-angular/tsconfig.spec.json"
                  ],
                  "exclude": [
                     "**/node_modules/**"
                  ]
               }
            }
         }
      }
   },
   "schematics": {
      "@schematics/angular:component": {
         "style": "css"
      }
   }
}
